{{!-- horizontal Welcome page card for logged in users --}}
{{log home}}
{{#if loggedIn}}
  {{!-- new event alert (Bootstrap toast) --}}
  {{#if newPicnic}}
  <section class="updates">
    <div class="toast" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="toast-header">
        <img src="..." class="rounded me-2" alt="...">
        <strong class="me-auto">Update!</strong>
        <small>At: {{created_at}}</small>
        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
      <div class="toast-body">
        Hello, {{firstName}}! You have a new event: {{event_name}}.
      </div>
    </div>
  </section>
  {{/if}}
{{!-- user's picnic events overview here --}}
<section>
  <div class="my-picnics">
    {{!-- creates a picnic event card for each picnic --}}
    {{#each events}}
    <div class="card text-bg-dark">
      <img src="/assets/images/picnic cards (vertical)/{{verticalPhoto}}" class="card-img" alt="picnic imagery">
      <div class="card-img-overlay">
        <h5 class="card-title">{{event_name}}</h5>
        <p class="card-text">On {{start_time}}</p>
        <p class="card-text"><small>At {{address}}</small></p>
      </div>
    </div>
    {{/each}}
  </div>
  {{!-- user's Google calendar events overview here --}}
  <div class="my-calendar">
    {{!-- data inside this DIV --}}
  </div>
</section>
{{else}}
