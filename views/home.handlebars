{{!-- horizontal Welcome page card for logged in users --}}
{{#if loggedIn}}
<section>
  <p>hi you are logged in</p>
</section>
{{else}}
{{!-- horizontal Welcome page card for logged out users --}}
<section>
  <div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
      {{!-- welcome card text --}}
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title">Join Hey Boo-Boo with Your Friends</h5>
          <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
          <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
        </div>
      </div>
      {{!-- welcome card image --}}
      <div class="col-md-4">
        <img src="/assets/picnic cards (vertical)/2020 - Kin Li (Unsplash).jpg" class="img-fluid rounded-start" alt="picnic blanket in the daylinght on the grass with a basket, wicker hat, some bottled drinks and a book lying on the blanket next to a blackboard chalk 'Welcome' sign and some candle lanterns">
      </div>
    </div>
  </div>
</section>
