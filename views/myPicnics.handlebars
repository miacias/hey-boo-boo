{{!-- welcome back --}}
<section class="mt-3 ms-4">
{{#if (hasEvents hosting.length attending.length)}}
  <h3>{{firstName}}, here's all your events!</h3>
{{else}}
  <h3>Uh oh, your picnics list is empty!</h3>
  <p>{{firstName}}, host or join your first event at <a href="/new-picnic">New Event</a>!</p>
  <div class="col-10 d-flex">
    <div class="row">
      <div class="card col p-3 bear-card">
        <img src="/assets/images/bears/bear-photos/{{bearPhoto}}" class="card-img-top img-fluid picnic-card-img"
        alt="bear photograph">
        <p class="bear-talk text-center mt-2">" I can't WAIT ! "</p>
      </div>
    </div>
  </div>
{{/if}}
</section>
{{!-- user's picnic events overview --}}
<section class="my-picnics row m-1">
  {{!-- picnics a user is hosting --}}
  {{#if hosting.length}}
    {{#each hosting}}
    <div class="hosting picnic-id card border-0 m-3 pt-3 col-sm-9 col-md-5 col-lg-3" id="{{id}}">
      <a href="/my-picnics/{{id}}">
        <img src="/assets/images/picnic cards (vertical)/{{verticalPhoto}}" class="card-img-top img-fluid picnic-card-img"
          alt="picnic imagery">
      </a>
      <div class="card-body text-center">
        <a href="/my-picnics/{{id}}"><h5 class="event-name card-title">{{event_name}}</h5></a>
        <p class="start-time card-text">On {{format_time start_time}}</p>
        <p class="address card-text"><small>{{address}}</small></p>
        {{!-- share invite code with friends --}}
        <button type="button" class="invite-link btn btn-lg btn-danger border-0" id="{{id}}" data-bs-toggle="popover" data-bs-title="Share with your friends to join your event!" data-bs-content="Copied your code! {{id}}">Copy Picnic Code</button>
      </div>
    </div>
    {{/each}}
  {{/if}}
  {{!-- picnics a user is attending --}}
  {{#if attending.length}}
    {{#each attending}}
    <div class="attending picnic-id card border-0 m-3 pt-3 col-sm-9 col-md-5 col-lg-3" id="{{id}}">
      <a href="/my-picnics/{{id}}">
        <img src="/assets/images/picnic cards (vertical)/{{verticalPhoto}}" class="card-img-top img-fluid picnic-card-img"
          alt="picnic imagery">
      </a>
      <div class="card-body text-center">
        <a href="/my-picnics/{{id}}"><h5 class="event-name card-title">{{event_name}}</h5></a>
        <p class="start-time card-text">On {{format_time start_time}}</p>
        <p class="address card-text"><small>{{address}}</small></p>
      </div>
    </div>
    {{/each}}
  {{/if}}
</section>
{{!-- user's embedded Google calendar events --}}
<section>
  <div class="my-calendar">
    {{!-- data inside this DIV --}}
  </div>
</section>

