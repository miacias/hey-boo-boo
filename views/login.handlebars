{{!-- "Row" class to separate login/signup form and content on right of page --}}
<div id="login-background" class="container rounded">
  <div class="row justify-content-center m-5">

    <!-- Pills navs -->
    <div class="col-md-3">

      <img class="login-photo" src="/assets/images/picnic cards (vertical)/{{verticalPhoto}}" class="img-fluid" />

    </div>
    <div class="col-md-6" align="center">
      <div class="w-50 p-3">
        <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
          <li class="nav-item" role="presentation">
            <a class="nav-link active text-dark login-register" id="tab-login" data-bs-toggle="pill" href="#pills-login" role="tab"
              aria-controls="pills-login" aria-selected="true">Login</a>
          </li>
          <li class="nav-item" role="presentation">
            <a class="nav-link text-dark login-register" id="tab-register" data-bs-toggle="pill" href="#pills-register">Register</a>
          </li>
        </ul>

        <!-- Pills content - contains both Login and Register forms -->
        <div class="tab-content">

          <!-- Register Form -->
          <div class="tab-pane fade" id="pills-register" role="tabpanel" aria-labelledby="tab-register">
            <form id="signup-form">
              <div class="form-outline mb-4">
                <input type="text" id="registerFirstName" class="form-control" />
                <label class="form-label" for="registerFirstName">First Name</label>
              </div>

              <div class="form-outline mb-4">
                <input type="text" id="registerLastName" class="form-control" />
                <label class="form-label" for="registerLastName">Last Name</label>
              </div>

              <!-- Username input - I figure we'll just use the email as a username? -->
              {{!-- <div class="form-outline mb-4">
                <input type="text" id="registerUsername" class="form-control" />
                <label class="form-label" for="registerUsername">Username</label>
              </div> --}}

              <!-- Email input -->
              <div class="form-outline mb-4">
                <input type="email" id="registerEmail" class="form-control" />
                <label class="form-label" for="registerEmail">Email</label>
              </div>

              <!-- Password input -->
              <div class="form-outline mb-4">
                <input type="password" id="registerPassword" class="form-control text-center" placeholder="8+ characters"/>
                <label class="form-label" for="registerPassword">Password</label>
              </div>

              <!-- Repeat Password input -->
              <div class="form-outline mb-4">
                <input type="password" id="registerRepeatPassword" class="form-control text-center" placeholder="must match"/>
                <label class="form-label" for="registerRepeatPassword">Repeat password</label>
              </div>

              <!-- Checkbox for terms, not sure if we need it -->

              {{!-- <div class="form-check d-flex justify-content-center mb-4">
                <input class="form-check-input me-2" type="checkbox" value="" id="registerCheck" checked
                  aria-describedby="registerCheckHelpText" />
                <label class="form-check-label" for="registerCheck">
                  I have read and agree to the terms
                </label>
              </div> --}}

              <!-- Submit button -->
              <button type="submit" class="signup-button btn btn-primary btn-block mb-3 border-0">Sign up</button>
            </form>
          </div>

          <!--Login Form -->
          <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
            <form id="login-form">
              <div class="text-center mb-3">
                <!-- Login Email input -->
                <div class="form-outline mb-4">
                  <input type="email" id="email-login" class="form-control" />
                  <label class="form-label" for="loginName">Email</label>
                </div>

                <!-- Login Password input -->
                <div class="form-outline mb-4">
                  <input type="password" id="password-login" class="form-control text-center" placeholder="8+ characters" />
                  <label class="form-label" for="loginPassword">Password</label>
                </div>
                <!-- Login Sign-In button -->
                <button type="submit" class="login-button btn btn-primary btn-block mb-4 border-0">Sign in</button>
            </form>

            <!-- 2 column grid layout -->
            <div class="row mb-4">
              <div class="col-md-6 d-flex justify-content-center">
                <!-- Checkbox -->
                {{!-- <div class="form-check mb-3 mb-md-0">
                  <input class="form-check-input" type="checkbox" value="" id="loginCheck" checked />
                  <label class="form-check-label" for="loginCheck"> Remember me </label>
                </div> --}}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-3">

    <img class="login-photo" src="/assets/images/picnic cards (vertical)/{{verticalPhoto}}" class="img-fluid" />

  </div>
</div>
<script src="/js/login.js"></script>