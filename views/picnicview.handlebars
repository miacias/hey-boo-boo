{{!-- view of specific picnic, including attendees and food list --}}

<div class="card">
  <div class="card-header">
    Event: {{thisEvent.picnicName}}
  </div>
  <div class="card-body">
    <h5 class="card-title">When: {{format_time thisEvent.picnicTime}}</h5>
    <h6>Where: {{thisEvent.picnicAddy}}</h6>
    {{#if hostAndFoods}}
      <h6>Host: {{hostAndFoods.picnicUser.user.first_name}} {{hostAndFoods.picnicUser.user.last_name}}</h6>
    {{else}}
      <h6>Host: {{host}}</h6>
    {{/if}}
    <a class="btn btn-primary" href="/my-picnics">Go back to My Picnics</a>
  </div>
</div>

<section class="row">
  <div class="card col-sm-6 col-md-6 col-lg-6">
    <div class="card-header">
    Who's bringing what?! üêªüçΩÔ∏è
    </div>
      <ul class="list-group list-group-flush">
      {{#if picnicData}}
       {{#each picnicData}}
        <li data-picnicUId="{{this.picnicUserId}}" data-foodId="{{this.foodId}}" class="list-group-item">{{this.foodName}} ~ brought by {{this.firstName}} {{this.lastName}}</li>
       {{/each}}
      {{else}}
        <li class="list-group-item">Be the first to add something!</li>
      {{/if}}
    </ul>
      <div class="input-group mb-3">
        <input type="text" id="new-food-name" data-my-picnic-user-id="{{myInfo.id}}" class="form-control" placeholder="Spaghetti or something..." aria-label="Enter name of food or item to bring here" aria-describedby="add-button">
        <button class="btn btn-primary" type="button" id="add-food-btn">Add</button>
      </div>
  </div>

  <script src='/js/thisPicnic.js'></script>


